#/ test/items.lisp

(defun create-order (##name order)
  (handler-case 
      (retrieve-one
       (insert-into :##name
         (set= #< 湖狺邯狺撖 &vars >#
               :created_at (local-time:now)
               :updated_at (local-time:now))
         (returning :order)))
    (error (e) e)))

(defun change-order (user order)
  (handler-case
      (retrieve-one
       (update :orders
         (set= :order order
               :updated_at (local-time:now))
         (where (:= :user user))
         (returning :order)))
    (error (e) e)))

