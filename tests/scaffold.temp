#/ test/items.lisp
#: name &vars &functions

(defun create-order (user order)
  (handler-case 
      (retrieve-one
       (insert-into :orders
         (set= #<for arg in vars
               :arg arg>#
               :created_at (local-time:now)
               :updated_at (local-time:now))
         (returning :order)))
    (error (e) e)))

(defun create-order (user order)
  (handler-case 
      (retrieve-one
       (insert-into :orders
         (set= :user user
               :order order               
               :created_at (local-time:now)
               :updated_at (local-time:now))
         (returning :order)))
    (error (e) e)))

(defun change-order (user order)
  (handler-case
      (retrieve-one
       (update :orders
         (set= :order order
               :updated_at (local-time:now))
         (where (:= :user user))
         (returning :order)))
    (error (e) e)))

